<h1>Add a Book</h1>

<%= form_for @book do |f| %>
  
    <p>
    <%= f.label :author %>  
    <br>
    <%= f.text_field :author %>
  </p>
  
  <p>
    <%= f.label :title %>
    <br>
    <%= f.text_field :title %>
  </p>
  
  <p>
    <%= f.label :year %>
    <br>
    <%= f.text_field :year %>
  </p>
  
  <p>
    <%= f.submit "Save" %>
  </p>

<% end %>

<br>

<%= link_to "Back to all books", books_url %>